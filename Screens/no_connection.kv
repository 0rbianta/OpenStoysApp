MDScreen:
    name: "no_connection"
    padding: "2dp"
    Image:
        canvas.after:
            Color:
                rgba: 0, 0, 0, .9
            Rectangle:
                size: self.size
                pos: self.pos
        source: "./Images/metal_background.jpg"
        allow_stretch: True
        keep_ratio: False


    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint_y: None
        height: "150dp"
        orientation: "vertical"
        MDIcon:
            theme_text_color: "Custom"
            text_color: 1, 1, 1 ,1
            icon: "connection"
            font_size: "60dp"
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": .5}

        MDLabel:
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_size: "25dp"
            text: "No connection"
            halign: "center"

    MDLabel:
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        size_hint_y: None
        height: self.texture_size[1]
        font_size: "18dp"
        text: "Please connect to internet"
        pos_hint: {"bottom": 1}
        halign: "center"
